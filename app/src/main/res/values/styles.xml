<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="textobienvenida">
        <item name="android:textSize">50dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
         <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">80dp</item>
        <item name="android:textStyle">normal|bold</item>
        <item name="android:textColor">#fff</item>
    </style>
    <style name="estiloboton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_below">@+id/textView</item>
        <item name="android:layout_marginTop">@dimen/padding_botton</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">@drawable/botontransparente</item>
    </style>
</resources>
